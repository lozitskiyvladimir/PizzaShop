<h2>Welcome to Pizza Shop! </h2>

<!-- Получаем все пиццы с сервера и выводим их на страницу.Выводим кнопку при нажатии на которую
сработает js метод add_to_cart -->
<div class="row">
  <% @products.each do |p|%>

      <div class="col-md-4">
          <div>
              <%= p.title%>
          </div>

          <div>
              <img src="<%= p.path_to_image%>">
          </div>

          <div>
            <%= p.description%>
          </div>

          <div>
            Size: <%= p.size%> cm
          </div>

          <div>
            Price: <%= p.price%> rub
          </div>

          <div>
            <button class="btn btn-sm btn-success" onclick="add_to_cart(<%= p.id%>)" >Add to cart </button>
          </div>


      </div>

      <% end %>
</div>
